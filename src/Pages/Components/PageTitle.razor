@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public bool NoPrefix { get; set; }
    [Inject] private IJSRuntime jsRuntime { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Title = Title.Trim()
                         .Substring(0, Math.Min(Title.Length, 120))
                         .Trim();
            var prefix = NoPrefix ? string.Empty : "Minecraft Monitor - ";
            await jsRuntime.InvokeVoidAsync("setTitle", prefix + Title);
        }

        await base.OnAfterRenderAsync(firstRender);
    }
}